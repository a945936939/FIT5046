<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:textColor="#000000"
                    android:text="New User"
                    android:fontFamily="@font/comic"
                    android:typeface="sans"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_user_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic"
                    app:endIconMode="clear_text"
                    android:hint="User ID: "
                    android:inputType="textAutoComplete"
                    android:layout_margin="16dp"
                    android:textSize="20sp">
                </EditText>

                <EditText
                    android:id="@+id/edit_user_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic"
                    app:endIconMode="clear_text"
                    android:hint="First Name: "
                    android:inputType="textAutoComplete"
                    android:layout_margin="16dp"
                    android:textSize="20sp">
                </EditText>

                <EditText
                    android:id="@+id/edit_user_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic"
                    app:endIconMode="clear_text"
                    android:hint="Last Name: "
                    android:inputType="textAutoComplete"
                    android:layout_margin="16dp"
                    android:textSize="20sp">
                </EditText>

                <EditText
                    android:id="@+id/edit_user_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic"
                    app:endIconMode="clear_text"
                    android:hint="Gender: "
                    android:inputType="textAutoComplete"
                    android:layout_margin="16dp"
                    android:textSize="20sp">
                </EditText>

                <EditText
                    android:id="@+id/edit_user_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic"
                    app:endIconMode="clear_text"
                    android:hint="Age: "
                    android:inputType="number"
                    android:layout_margin="16dp"
                    android:textSize="20sp">

                </EditText>

                <EditText
                    android:id="@+id/edit_user_yearOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic"
                    app:endIconMode="clear_text"
                    android:hint="Year of Birth: "
                    android:inputType="textAutoComplete"
                    android:layout_margin="16dp"
                    android:textSize="20sp">
                </EditText>

                <EditText
                    android:id="@+id/edit_user_Height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comic"
                    app:endIconMode="clear_text"
                    android:hint="Height: "
                    android:inputType="numberDecimal"
                    android:layout_margin="16dp"
                    android:textSize="20sp">
                </EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/saveButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/purple_500"
                        android:strokeColor ="@color/black"
                        android:text="Save"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/comic"
                        android:textColor="@color/white">
                    </Button>

                    <Button
                        android:id="@+id/clearButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/purple_500"
                        android:strokeColor ="@color/black"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/comic"
                        android:text="Clear"
                        android:textColor="@color/white">
                    </Button>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>